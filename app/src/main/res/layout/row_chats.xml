<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_usuarios"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#0099FF"
        android:elevation="10dp"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_usuarios"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                />

            <TextView
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_usuarios"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="nombre usuario"
                android:textColor="#ffffff"

                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_desconectado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_desconectado">

            </ImageView>

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_desconectado"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_conectado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_conectado">

            </ImageView>

            <TextView
                android:text="En linea"
                android:visibility="gone"
                android:id="@+id/tv_conectado"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>