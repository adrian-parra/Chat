<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_usuarios"
        android:backgroundTint="#0099FF"
        android:elevation="10dp"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_usuarios"
                android:layout_margin="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                />

            <TextView
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_usuarios"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="nombre usuario"
                android:textColor="#ffffff"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/btn_add"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_agregar"
                android:text="Agregar"

                >


            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/btn_send"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:backgroundTint="@color/colorGris"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_send"
                android:text="Solicitud enviada"

                >


            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/btn_tengosolicitud"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:backgroundTint="@color/colorNaranja"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_check"
                android:text="Aceptar solicitud"

                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/btn_amigos"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_check"
                android:text="amigos"

                >

            </Button>
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:id="@+id/progressbar"
    >

</ProgressBar>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>